<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="8dp"
    tools:context="com.m2team.colorpicker.SettingActivity">

    <TextView
        android:id="@+id/lb1"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:text="Color Mode"
        android:textSize="20sp"
        android:textColor="@color/cardview_dark_background"
        />

    <com.rey.material.widget.Spinner
        android:id="@+id/spinner_1st_color_type"
        style="@style/Material.Widget.Spinner.Light"
        app:rd_enable="true"
        app:rd_style="@style/Material.Drawable.Ripple.Wave.Light"
        app:spn_arrowAnimDuration="@android:integer/config_shortAnimTime"
        app:spn_arrowInterpolator="@android:anim/decelerate_interpolator"
        app:spn_arrowSwitchMode="true"
        app:spn_label="Most used color model"
        app:spn_labelEnable="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/lb1"
        android:minWidth="128dp" />

    <View
        android:id="@+id/divider1"
        android:layout_below="@+id/spinner_1st_color_type"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        />


    <TextView
        android:id="@+id/lb2"
        android:layout_below="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:text="License"
        android:textSize="20sp"
        android:textColor="@color/cardview_dark_background"
        />


</RelativeLayout>
